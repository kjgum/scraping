<div class="row">
<div class="col-md-6 col-md-offset-5">
  <div id="content">


  <div id="buttons" class="buttons text-left">
  <button id="previous" data-id="{{ this._id }}" class="btn"> <span class="glyphicon glyphicon-chevron-left"></span> </button>
    <button id="next" data-id="{{ this._id }}" class="btn"> <span class="glyphicon glyphicon-chevron-right"></span> </button>
  </div>



<div class="text-left">
    <h2>{{ this.title }}</h2>
    <p>{{ this.synopsis }}</p>
    </div>
  </div>



</div>
</div>
